A partial for custom theme changes 
--------------------------------
*/
ul.site-footer__linklist {
   width: 250px;
   display: flex;
   flex-direction: row;
   align-items: center;
   justify-content: space-around;
   margin: auto;
   @media screen and (min-width: 50em) {
      margin: 0px;
   }
}

// View Shop Button
a.view-shop {
   padding: 20px 50px;
   background: #201f21;
   color: white;
   font-size: 1.5em;
   transition: all 0.3s ease-out;
   &:hover {
      background: #515354;
      cursor: pointer;
      color: white;
   }
}

// Removes the gray background in mobile single-product grid
.grid-product__image-link {
   background-color: transparent;
}

.drawer {
   * {
      &:active {
         outline: transparent;
      }
      &:focus {
         outline: transparent;
      }
   }
}
.drawer-left__inner {
   &:active {
      outline: transparent;
   }
   &:focus {
      outline: transparent;
   }
}

.mobile-nav__item--secondary {
   display: none;
}
