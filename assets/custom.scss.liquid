ul.site-footer__linklist {
   width: 250px;
   display: flex;
   flex-direction: row;
   align-items: center;
   justify-content: space-around;
   margin: auto;
   @media screen and (min-width: 50em) {
      margin: 0px;
   }
}

// View Shop Button
button.view-shop {
   padding: 20px 50px;
   background: #201f21;
   color: white;
   font-size: 1.5em;
   transition: all 0.3s ease-out;
   &:hover {
      background: #515354;
   }
}

// Removes the gray background in mobile single-product grid
.grid-product__image-link {
   background-color: transparent;
}
